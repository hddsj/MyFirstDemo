<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secrete_garden_bg"
    android:background="@drawable/secret_garden_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/title"
        android:src="@drawable/secret_garden_title"
        style="@style/main_activity_title_bar"  />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/life_bar_title"
        android:layout_below="@+id/title"
        android:text="生命值进度条："
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/plant_life"
        android:gravity="center"
        android:text="当前生命值:"
        android:layout_below="@+id/life_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:max="100"
        android:id="@+id/plant_life_bar"
        android:layout_below="@+id/plant_life"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_height="75dp">
        <ImageButton
            android:id="@+id/plant_fertilizer"
            android:src="@drawable/fertilizer"
            style="@style/secret_garden_tools"/>
        <ImageButton
            android:id="@+id/plant_water"
            android:src="@drawable/water"
            style="@style/secret_garden_tools"/>
        <ImageButton
            android:id="@+id/plant_debug"
            android:src="@drawable/debug"
            style="@style/secret_garden_tools"/>
    </LinearLayout>
</RelativeLayout>
