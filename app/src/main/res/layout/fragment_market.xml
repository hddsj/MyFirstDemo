<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/market_iv_title"
            android:src="@drawable/market_title"
            style="@style/main_activity_title_bar"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/market_rcv"
            android:layout_below="@+id/market_iv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>
